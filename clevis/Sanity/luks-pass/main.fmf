  - clevis-luks
  - tang
  - jose
  - cryptsetup
  - wget
duration: 5m
enabled: true
tag:
  - CI-Tier-1
  - NoRHEL4
  - NoRHEL5
  - NoRHEL6
  - NoRHEL7
  - SP-TBU
  - TIPpass
  - TIPpass_Security
  - Tier1
tier: '1'
extra-summary: /CoreOS/clevis/Sanity/luks-pass
extra-task: /CoreOS/clevis/Sanity/luks-pass
extra-nitrate: TC#0605163
adjust:
